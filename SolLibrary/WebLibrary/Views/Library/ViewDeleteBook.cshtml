@using WebLibrary.Models
@model Ent_Books
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewDeleteBook</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div>
        <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
            <div class="row justify-content-center w-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-lg border-0">
                        <div class="card-header bg-danger text-white text-center py-4">
                            <div class="mb-3">
                                <i class="fas fa-exclamation-triangle fs-1"></i>
                            </div>
                            <h3 class="card-title mb-1">Confirmar eliminación</h3>
                            <p class="card-tex opacity-75 mb-0">Esta acción no se puede deshacer</p>
                        </div>

                        <div class="card-body p-4">
                            <div class="alert alert-warning border-warning" role="alert">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-info-circle me-3 mt-1"></i>
                                    <div>
                                        <strong>¿Estás seguro de que deseas eliminar este producto?</strong>
                                        <br />
                                        <small>Esta acción eliminará permanentemente el producto del sistema</small>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-box text-primary me-2"></i>
                                <h5 class="mb-0">Información del producto</h5>
                            </div>

                            <div class="card bg-light border-start border-danger border-4">
                                <div class="card-body">
                                    <div class="row mb-3 align-items-center">
                                        <div class="col-sm-5">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-tag text-primary me-2"></i>
                                                <strong class="text-muted">Book ID:</strong>
                                            </div>
                                        </div>
                                        <div class="col-sm-7">
                                            <span class="badge bg-primary fs-6">@Model.IdBook</span>
                                        </div>
                                    </div>

                                    <hr class="my-2" />

                                    <div class="row mb-3 align-items-center">
                                        <div class="col-sm-5">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-align-left text-info me-2"></i>
                                                <strong class="text-muted">Title: </strong>
                                            </div>
                                        </div>
                                        <div class="col-sm-7">
                                            <span class="fw-semibold">@Model.Title</span>
                                        </div>
                                    </div>

                                    <hr class="my-2" />

                                    <div class="row mb-3 align-items-center">
                                        <div class="col-sm-5">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-dollar-sign text-success me-2"></i>
                                                <strong class="text-muted">Autor:</strong>
                                            </div>
                                        </div>
                                        <div class="col-sm-7">
                                            <span class="badge bg-success fs-6">@Model.Autor</span>
                                        </div>
                                    </div>

                                    <hr class="my-2" />

                                    <div class="row mb-3 align-items-center">
                                        <div class="col-sm-5">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-calendar text-warning me-2"></i>
                                                <strong class="text-muted">Genre:</strong>
                                            </div>
                                        </div>
                                        <div class="col-sm-7">
                                            <span class="fw-semibold">@Model.Genre</span>
                                        </div>
                                    </div>

                                    <hr class="my-2" />

                                    
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-3">
                                <a href="/Library/Index" class="btn btn-danger">Cancelar</a>
                                <a href="/Library/FormDeleteBook?idBook=@Model.IdBook" class="btn btn-danger">Eliminar</a>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
