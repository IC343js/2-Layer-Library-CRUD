@using WebLibrary.Models
@model List<Ent_Books>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Library Management System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <!-- Navigation Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="bi bi-building-fill me-2"></i>
                <strong>Library Management System</strong>
            </a>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Welcome Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="card-body text-center py-4">
                        <h1 class="card-title display-4 mb-2">
                            <i class="bi bi-book-fill me-3"></i>Biblioteca
                        </h1>
                        <p class="lead mb-0">Manage your book collection efficiently</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["mensaje"] != null)
        {
            var message = TempData["mensaje"].ToString();
            var isError = message.Contains("Error") || message.Contains("Invalid") || message.Contains("not found");

            <div class="row mb-4">
                <div class="col-12">
                    <div class="alert @(isError ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
                        <i class="bi @(isError ? "bi-exclamation-triangle-fill" : "bi-check-circle-fill") me-2"></i>
                        <strong>@(isError ? "Error:" : "Success:")</strong> @TempData["mensaje"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }

        <!-- Action Buttons -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-gear-fill me-2 text-primary"></i>Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            <div class="col-md-3 col-sm-6">
                                <a href="/Library/GoLoan" class="btn btn-info w-100 py-2">
                                    <i class="bi bi-download me-2"></i>Book Loan
                                </a>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <a href="/Library/GoReturn" class="btn btn-success w-100 py-2">
                                    <i class="bi bi-upload me-2"></i>Book Return
                                </a>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <a href="/Library/GoAdd" class="btn btn-primary w-100 py-2">
                                    <i class="bi bi-plus-circle me-2"></i>Add Book
                                </a>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <button class="btn btn-outline-secondary w-100 py-2" onclick="window.location.reload()">
                                    <i class="bi bi-arrow-clockwise me-2"></i>Refresh
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Books Table -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-table me-2 text-primary"></i>Book Collection
                        </h5>
                        <span class="badge bg-primary">Total: @Model.Count() books</span>
                    </div>
                    <div class="card-body p-0">
                        @if (Model != null && Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-striped mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col">
                                                <i class="bi bi-hash me-1"></i>ID
                                            </th>
                                            <th scope="col">
                                                <i class="bi bi-book me-1"></i>Title
                                            </th>
                                            <th scope="col">
                                                <i class="bi bi-person me-1"></i>Author
                                            </th>
                                            <th scope="col">
                                                <i class="bi bi-tag me-1"></i>Genre
                                            </th>
                                            <th scope="col">
                                                <i class="bi bi-stack me-1"></i>Copies
                                            </th>
                                            <th scope="col" class="text-center">
                                                <i class="bi bi-tools me-1"></i>Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Ent_Books book in Model)
                                        {
                                            <tr>
                                                <td class="fw-bold text-primary">@book.IdBook</td>
                                                <td>
                                                    <strong>@book.Title</strong>
                                                </td>
                                                <td>@book.Autor</td>
                                                <td>
                                                    <span class="badge bg-secondary">@book.Genre</span>
                                                </td>
                                                <td>
                                                    @if (book.Copies > 10)
                                                    {
                                                        <span class="badge bg-success">@book.Copies</span>
                                                    }
                                                    else if (book.Copies > 0)
                                                    {
                                                        <span class="badge bg-warning">@book.Copies</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">@book.Copies</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a href="/Library/GoUpdate?idBook=@book.IdBook"
                                                           class="btn btn-outline-warning"
                                                           title="Update Book">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </a>
                                                        <a href="/Library/GoDelete?idBook=@book.IdBook"
                                                           class="btn btn-outline-danger"
                                                           title="Delete Book"
                                                           onclick="return confirm('Are you sure you want to delete the book \'@book.Title\'?')">
                                                            <i class="bi bi-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-inbox display-1 text-muted"></i>
                                <h4 class="text-muted mt-3">No Books Available</h4>
                                <p class="text-muted">Start by adding your first book to the collection.</p>
                                <a href="/Library/GoAdd" class="btn btn-primary">
                                    <i class="bi bi-plus-circle me-2"></i>Add First Book
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards (Optional Enhancement) -->
        @if (Model != null && Model.Any())
        {
            <div class="row mt-4">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <i class="bi bi-book-fill display-4"></i>
                            <h4 class="mt-2">@Model.Count()</h4>
                            <p class="mb-0">Total Books</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <i class="bi bi-stack display-4"></i>
                            <h4 class="mt-2">@Model.Sum(b => b.Copies)</h4>
                            <p class="mb-0">Total Copies</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <i class="bi bi-check-circle-fill display-4"></i>
                            <h4 class="mt-2">@Model.Count(b => b.Copies > 0)</h4>
                            <p class="mb-0">Available</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body text-center">
                            <i class="bi bi-exclamation-triangle-fill display-4"></i>
                            <h4 class="mt-2">@Model.Count(b => b.Copies == 0)</h4>
                            <p class="mb-0">Out of Stock</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light mt-5 py-4">
        <div class="container text-center">
            <p class="mb-0">
                <i class="bi bi-building-fill me-2"></i>
                Library Management System &copy; @DateTime.Now.Year
            </p>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>